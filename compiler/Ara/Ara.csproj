<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PublishAot>true</PublishAot>
        <AssemblyName>ara</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="Ast\Nodes\Statements\" />
      <None Remove="Ast\Nodes\Expressions\" />
      <None Remove="Ast\Nodes\Expressions\Atoms\" />
    </ItemGroup>
    <ItemGroup>
      <Content Include="..\..\parser\bin\parser.so">
        <Link>parser.so</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\Ara.Ast\Ara.Ast.csproj" />
      <ProjectReference Include="..\Ara.CodeGen\Ara.CodeGen.csproj" />
      <ProjectReference Include="..\Ara.Parsing\Ara.Parsing.csproj" />
    </ItemGroup>
</Project>
