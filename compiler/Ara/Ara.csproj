<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="DotNetGraph" Version="2.7.0" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Ast\Nodes\Statements\" />
      <None Remove="Ast\Nodes\Expressions\" />
      <None Remove="Ast\Nodes\Expressions\Atoms\" />
    </ItemGroup>
    <ItemGroup>
      <Folder Include="Ast\Nodes\Statements\" />
      <Folder Include="Ast\Nodes\Expressions\" />
      <Folder Include="Ast\Nodes\Expressions\Atoms\" />
    </ItemGroup>
    <ItemGroup>
      <Content Include="..\..\parser\bin\parser.so">
        <Link>parser.so</Link>
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>
</Project>
