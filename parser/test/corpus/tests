=================================================
Pi
=================================================

module main

fn main() -> float {
  var pi: float = 4.0
  var flag: bool = false
  var i: float = 0.0
  for c in 3..10000000 {
    var f: bool = flag
    if f == true {
      pi = pi + 4.0 / i
      flag = false
    }
    if f == false {
      pi = pi - 4.0 / i
      flag = true
    }
    i = i + 2.0
  }
  return pi
}

